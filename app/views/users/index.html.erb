<h1><%= @message %></h1>

<%= link_to "投稿画面へ", new_user_path %>

<% @user.each do |user| %>
  <p><%= user.name %> - <%= user.age %> - <%= user.address %>
     <%= link_to "編集", edit_user_path(user), method: :get %> |
     <%= link_to "削除", user_path(user), method: :delete, data: { confirm: "Are you sure?" } %>
  <p>
<% end %>

<!-- フィルタリングを行うための検索窓 -->
<input class="form-control" id="myInput" type="text" placeholder="Search Curriculum..">

<table class="table table-striped">
  <thead class="bg-danger text-white">
    <tr>
      <th>言語</th>
      <th>説明</th>
    </tr>
  </thead>
  <tbody id="myTable">
    <tr>
      <td>HTML/CSS</td>
      <td>Webサイトの画面を作るための言語</td>
    </tr>
    <tr>
      <td>Ruby</td>
      <td>Webサイトの裏側の処理をする言語</td>
    </tr>
    <tr>
      <td>Python</td>
      <td>人工知能を開発するための言語</td>
    </tr>
  </tbody>
</table>

<script>
  $(document).ready(function() {
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>